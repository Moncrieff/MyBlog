<%= simple_form_for post do |f| %>
  <% if post.errors.any? %>
    <h2>Ошибки не позволяют опубликовать эту запись. Их количество - <%= post.errors.count %></h2>
    <ul>
      <% post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.input :header, label: "Тема" %>
  <%= f.input :reading_time, label: "Время чтения" %>
  <%= f.input :excerpt, label: "Краткое содержание" %>
  <%= f.input :body, label: "Текст" %>
  <h3>Изображения</h3>
  <%= f.simple_fields_for :images do |ff| %>
    <%= ff.input :file, as: :file, label: "Изображение №#{ff.index + 1}" %>
    <%= ff.input :file_cache, as: :hidden %>
  <% end %>

  <%= f.submit "Опубликовать" %>
<% end %>
