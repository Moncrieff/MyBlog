<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |key, message| %>
      <div class="">
        <%= message %>
      </div>
    <% end %>
    <div class="content column-12">
      <div class="header column-12">
        Логотип
        <div class="navigation">
          <%= link_to "Статьи", posts_path %>
        </div>
      </div>
      <%= yield %>
    </div>
  </div>
</body>
</html>
